{
  "openapi": "3.0.0",
  "info": {
    "title": "Indian Post Office API",
    "version": "1.0.0",
    "description": "Fetch post office details by branch name"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development"
    },
    {
      "url": "https://your-app-name.onrender.com",
      "description": "Render deployment"
    }
  ],
  "paths": {
    "/postoffice/{branchName}": {
      "get": {
        "summary": "Get post office details",
        "parameters": [
          {
            "name": "branchName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post office found"
          },
          "404": {
            "description": "Post office not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}
